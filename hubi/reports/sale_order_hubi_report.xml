<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_sale_order_hubi">
    <t t-call="web.html_container">
        <t t-set="is_validate" t-value="True"/>
        <t t-set="is_pro_forma" t-value="False"/>
        <t t-foreach="docs" t-as="doc">
            <t t-call="hubi.report_saleorder_hubi_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_sale_order_pro_forma_hubi">
    <t t-call="web.html_container">
        <t t-set="is_pro_forma" t-value="True"/>
        <t t-foreach="docs" t-as="doc">
            <t t-call="hubi.report_saleorder_hubi_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_sale_order_no_validate_hubi">
    <t t-call="web.html_container">
        <t t-set="is_no_validate" t-value="True"/>
        <t t-set="is_pro_forma" t-value="False"/>
        <t t-foreach="docs" t-as="doc">
            <t t-call="hubi.report_saleorder_hubi_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_saleorder_hubi_document" inherit_id="sale.report_saleorder_document">

    <xpath expr="//t/div/h2" position="replace">
        <h2 class="mt16">
            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                <span t-if="doc.state not in ['draft','sent']">Order # </span>
                <span t-if="doc.state in ['draft','sent']">Quotation # </span>
            </t>
            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                <span>Pro-Forma Invoice # </span>
            </t>
            <span t-field="doc.name"/>
        </h2>
    </xpath>
    
    <xpath expr="//div[@name='expiration_date']" position="after">  

        <div t-if="doc.di_sending_date" class="col-auto mw-100 mb-2">
            <strong>Sending Date:</strong>
            <p class="m-0" t-field="doc.di_sending_date"/>
        </div>
        <div t-if="doc.di_packaging_date" class="col-auto mw-100 mb-2">
            <strong>Packaging Date:</strong>
            <p class="m-0" t-field="doc.di_packaging_date"/>
        </div>
 <!-->               
                <div name="payment_term" t-if="doc.payment_term_id" class="col-auto mw-100 mb-2">
                    <strong>Payment Terms:</strong>
                    <p class="m-0" t-field="doc.payment_term_id"/>
                </div>
 -->               
        <div name="carrier" t-if="doc.carrier_id" class="col-auto mw-100 mb-2">
            <strong>Carrier:</strong>
            <p class="m-0" t-field="doc.carrier_id"/>
        </div>
    </xpath>

    <xpath expr="//thead" position="replace">
        <thead style="display: table-row-group">
            <tr>
                <th name="th_description" class="text-left">Description</th>
                        
                <th name="th_category" class="text-left">Category</th>
                <th name="th_caliber" class="text-left">Caliber</th>
                        
                <th name="th_quantity" class="text-right">Quantity</th>
                        
                <th name="th_packaging" class="text-left">Packaging</th>
                <th name="th_weight" class="text-right">Weight</th>
                <t t-if="not is_no_validate">
                    <th name="th_priceweight" class="text-right">Weight Price</th>
                        
                    <th name="th_priceunit" class="text-right">Unit Price</th>
                    <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                        <span>Disc.%</span>
                    </th>
                    <th name="th_taxes" class="text-right">Taxes</th>
                    <th name="th_subtotal" class="text-right">
                        <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                        <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                    </th>
                </t>
            </tr>
        </thead>
    </xpath>
    
    
    <xpath expr="//tbody" position="replace">
        <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="total_weight" t-value="0"/>
                    <t t-set="total_qty" t-value="0"/>
                
                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section'  else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name"><span t-field="line.name"/></td>
                                <td name="td_categ"><span t-field="line.product_id.categ_id"/></td>
                                <t t-if="line.product_id.categ_id.di_shell">
                                    <td name="td_caliber"><span t-field="line.product_id.di_caliber_id"/></td>
                                </t>
                                <t t-else ="">
                                    <td></td>
                                </t>      
                                
                                <td name="td_quantity" class="text-right">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    <t t-if="line.product_id.categ_id.di_shell">
                                            <t t-set="total_qty" t-value="total_qty + line.product_uom_qty" />
                                     </t>   
                                </td>
                          
                                <td name="td_packaging"><span t-field="line.product_id.di_packaging_id"/></td>
                                <td name="td_weight" class="text-right">
                                    <t t-if="line.product_id.categ_id.di_shell">
                                        <span t-field="line.di_weight" t-options='{"widget": "float", "precision": 3}'/>
                                        <t t-set="total_weight" t-value="total_weight + line.di_weight" />
                                    </t>
                                </td>
                                
                                <t t-if="not is_no_validate">
                                    <td name="td_priceweight" class="text-right">
                                        <t t-if="line.product_id.categ_id.di_shell">
                                            <span t-field="line.di_price_weight"/>
                                        </t>    
                                    </td>
                                            
                                    <td name="td_priceunit" class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>    
                            </t>
                            
                            <t t-if="line.di_commentary">
                                <tr>
                                    <td  colspan="99">
                                    <span t-field="line.di_commentary"/>
                                        
                                    </td>
                                </tr>
                            </t>
                                    
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                            
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
        </tbody>
    
    </xpath>

    <xpath expr="//div[@name='so_total_summary']" position="before">  
        <t t-if="total_weight != 0 and total_qty != 0">
            <div class="mt32 ml64 mr4" name="total_qty_weight">
                    <div class="offset-8">
                        <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                            <t t-if="total_weight != 0 and total_qty != 0">
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td name="td_libtotqty"><strong>Quantity Shell : </strong></td>
                                    <td name="td_totalqty" class="text-right">
                                        <span t-esc="total_qty" />
                                    </td>
                                </tr>
                            </t>
                            <t t-if="total_weight != 0 and total_qty != 0">
                                <tr >
                                    <td name="td_libtotweight"><strong>Weight Shell : </strong></td>
                                    <td name="td_totweight" class="text-right">
                                        <span t-esc="total_weight" t-options='{"widget": "float", "precision": 3}' />
                                    </td>
                                </tr>
                            </t>
                            
                        </table>
                    </div>
            </div>
        </t>
    </xpath>
   
 <!--> 
    <t t-if="is_no_validate">
    
         <xpath expr="//div[@name='so_total_summary']" position="replace">
            
         
         </xpath>
    </t>      
  <xpath expr="//div[@name='so_total_summary']" position="attributes">
        <attribute name="attrs">{'invisible': [('is_no_validate','=',True)]}</attribute>
    </xpath> 
  
    invisible text-muted mr-2
 -->   
    
    <xpath expr="//div[@name='so_total_summary']" position="attributes">
        <!--<attribute name="class">'d-none' if is_no_validate = True else 'clearfix'</attribute>--> 
       <attribute name="t-att-style">'display: none;' if  is_no_validate else ''</attribute> 
    </xpath>
      
    
    
    
     
    <xpath expr="//div[@name='signature']" position="after"> 
        <p t-if="doc.di_comment">
            <span t-field="doc.di_comment"/>
        </p>

        <p t-if="doc.partner_id.di_bottom_message_delivery">
            <span t-field="doc.partner_id.di_bottom_message_delivery"/>
        </p>  
        
        <p t-if="doc.company_id.di_bottom_message_delivery">
            <span t-field="doc.company_id.di_bottom_message_delivery"/>
        </p>      
    </xpath>
  
   
</template>



</odoo>
