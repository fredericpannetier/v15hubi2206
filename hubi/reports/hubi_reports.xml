<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_hubi_lowmargin" model="report.paperformat">
        <field name="name">European A4 low margin</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>
    
    <record id="paperformat_hubi_A3_euro" model="report.paperformat">
        <field name="name">European A3</field>
        <field name="default" eval="True" />
        <field name="format">A3</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <record id="paperformat_hubi_A4_euro" model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>
    
    <record id="report_qweb_paperformat" model="report.paperformat">
        <field name="name">Account financial report qweb paperformat</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">110</field>
    </record>
    
    <record id="report_partner_list" model="ir.actions.report">
        <field name="name">Customer List</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hubi.report_partner_list_address</field>
        <field name="report_file">hubi.report_partner_list_address</field>
        <field name="attachment_use">False</field>
        <field name="paperformat_id" ref="paperformat_hubi_lowmargin"/>
        
        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_partner_sheet" model="ir.actions.report">
        <field name="name">Customer Sheet</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hubi.report_partner_sheet_address</field>
        <field name="report_file">hubi.report_partner_sheet_address</field>
        <field name="attachment_use">False</field>
