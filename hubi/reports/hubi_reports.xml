        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="binding_type">report</field>
    </record>
    
    <record id="report_productprice_sheet" model="ir.actions.report">
        <field name="name">Product Price Sheet</field>
        <field name="model">product.pricelist</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hubi.report_product_sheet_price</field>
        <field name="report_file">hubi.report_product_sheet_price</field>
        <field name="attachment_use">False</field>
        <field name="paperformat_id" ref="paperformat_hubi_A3_euro"/>
        
        <field name="binding_model_id" ref="model_product_pricelist"/>
        <field name="binding_type">report</field>
    </record>
  
