<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_hubi">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="hubi.report_invoice_document_hubi" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_with_payments_hubi">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-set="print_with_payments" t-value="True"/>
                    <t t-call="hubi.report_invoice_document_hubi" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_document_hubi" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@name='reference']" position="after">  
                <div class="col-auto mw-100 mb-2" t-if="o.di_sending_date" name="sending_date">
                            <strong>Sending Date:</strong>
                            <p class="m-0" t-field="o.di_sending_date"/>
                </div>
                <div class="col-auto mw-100 mb-2" t-if="o.di_packaging_date" name="packaging_date">
                            <strong>Packaging Date:</strong>
                            <p class="m-0" t-field="o.di_packaging_date"/>
                </div>

            </xpath>
            
            <xpath expr="//thead" position="replace">
                <thead>
                            <tr>
                                <th name="th_description" class="text-left"><span>Description</span></th>
                                <th name="th_category" class="text-left"><span>Category</span></th>
                                <th name="th_caliber" class="text-left"><span>Caliber</span></th>
                                
                                <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                                <th name="th_packaging" class="text-left"><span>Packaging</span></th>
                                <th name="th_weight" class="text-right"><span>Weight</span></th>
                                <th name="th_priceweight" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Weight Price</span></th>
                                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                    </thead>           
            </xpath>
            
            
            <xpath expr="//tbody" position="replace">
                         <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="total_weight" t-value="0"/>
                            <t t-set="total_qty" t-value="0"/>
                                
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <!--<tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">-->
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section'  else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="line_categ"><span t-field="line.product_id.categ_id.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="line_categ"><span t-field="line.product_id.di_caliber_id.name" t-options="{'widget': 'text'}"/></td>
                                        
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                            <t t-if="line.product_id.categ_id.di_shell">
                                                <t t-set="total_qty" t-value="total_qty + line.quantity" />
                                            </t>
                                        </td>
                                        
                                        <td name="line_packaging"><span t-field="line.product_id.di_packaging_id.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="line_weight">
                                            <t t-if="line.product_id.categ_id.di_shell">
                                                <span t-field="line.di_weight" t-options='{"widget": "float", "precision": 3}'/>
                                                <t t-set="total_weight" t-value="total_weight + line.di_weight" />
                                            </t>
                                        </td>
                                        
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-if="line.product_id.categ_id.di_shell">
                                                <span class="text-nowrap" t-field="line.di_price_weight"/>
                                            </t>    
                                        </td>
                                        
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    
                                    <t t-if="line.di_commentary">
                                    <tr>
                                        <td  colspan="99">
                                        <!--<td name="td_comment" class="font-italic o_line_note">-->   
                                        <span t-field="line.di_commentary"/>
                                        
                                        </td>
                                    </tr>
                                    </t>
                                    
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                     
            </xpath>
            
            <xpath expr="//table[@name='invoice_line_table']" position="after">  
                <t t-if="total_weight != 0 and total_qty != 0">
                    <div class="mt32 ml64 mr4" name="total_qty_weight">
                    <div class="offset-8">
                        <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                            <t t-if="total_weight != 0 and total_qty != 0">
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td name="td_libtotqty"><strong>Quantity Shell : </strong></td>
                                    <td name="td_totalqty" class="text-right">
                                        <span t-esc="total_qty" />
                                    </td>
                                </tr>
                            </t>
                            <t t-if="total_weight != 0 and total_qty != 0">
                                <tr >
                                    <td name="td_libtotweight"><strong>Weight Shell : </strong></td>
                                    <td name="td_totweight" class="text-right">
                                        <span t-esc="total_weight" t-options='{"widget": "float", "precision": 3}' />
                                    </td>
                                </tr>
                            </t>
                            
                        </table>
                    </div>
                    </div>
                </t>
          
            </xpath>
            
            <xpath expr="//p[@name='incoterm']" position="after"> 
                <p t-if="o.di_comment">
                    <span t-field="o.di_comment"/>
                </p> 
                <p t-if="o.partner_id.di_bottom_message_invoice">
                    <span t-field="o.partner_id.di_bottom_message_invoice"/>
                </p>
                <p t-if="o.company_id.di_bottom_message_invoice">
                    <span t-field="o.company_id.di_bottom_message_invoice"/>
                </p>             
            </xpath>
            
            
        </template>

