    <record id="miadi_family_product_search" model="ir.ui.view">
        <field name="name">miadi.family.search</field>
        <field name="model">di.multi.table</field>
        <field name="inherit_id" ref="multi_table.multi_table_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <filter domain="[('record_type', '=', 'Caliber')]" name="family" string="Caliber"/>
                <filter domain="[('record_type', '=', 'Packaging')]" name="family" string="Packaging"/>             
                <filter domain="[('record_type', '=', 'StockPackaging')]" name="family" string="StockPackaging"/>
            </xpath>
        </field>
    </record>
   
    <record id="view_miadi_family_tree" model="ir.ui.view" >
            <field name="name">miadi.family.tree</field>
            <field name="model">di.multi.table</field>  
            <field name="inherit_id" ref="multi_table.view_multi_table_tree"/>      
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="string">Product Families</attribute>
                    
                </xpath>
            
                <xpath expr="//field[@name='record_type']" position="after">
                    <!--<field name="reference"/>-->
                    <field name="default_value"/>
                </xpath>
            </field>
    </record>
    
    <record id="miadi_family_form" model="ir.ui.view">
        <field name="name">miadi.family.form</field>
        <field name="model">di.multi.table</field>
        <field name="inherit_id" ref="multi_table.multi_table_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                            <!--<field name="reference"/>-->
                            <field name="default_value"/>
                            <field name="weight" attrs="{'invisible': [('record_type', '!=', 'Packaging'),('record_type', '!=', 'StockPackaging')]}"/>
                            <field name="quantity" attrs="{'invisible': [('record_type', '!=', 'Packaging')]}"/>
                            <field name="sale_ok" attrs="{'invisible': [('record_type', '!=', 'Packaging')]}"/>
                            <field name="purchase_ok" attrs="{'invisible': [('record_type', '!=', 'Packaging')]}"/>
                               
            </xpath>
        </field>
    </record>
    

 
 
 
