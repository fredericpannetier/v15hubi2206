<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="res_config_settings_hubi_form" model="ir.ui.view">
    <field name="name">Config Settings for Hubi</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="90"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
            <div class="app_settings_block" data-string="Hubi" string="Hubi" data-key="hubi" groups="sales_team.group_sale_manager">
            <t groups="sales_team.group_sale_manager">
                <h2>Hubi</h2>
                <div class="row mt16 o_settings_container" name="hubi_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="These values are default values for Hubi" name="hubi_settings_panel">
                        <div class="o_setting_left_pane">
                        </div>
                        
                        <div class="o_setting_right_pane" name="hubi_settings_panel_right">
                            <span class="o_form_label">Default Values</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="text-muted">
                                Default values for HUBI
                            </div>
                            <div class="content-group" name="hubi_settings_panel_group">
                                <div class="row mt16" name="hubi_settings_data">
                                    <label string="Batch Number Calculation" for="di_calcul_lot" class="col-lg-5 o_light_label"/>
                                    <field name="di_calcul_lot" />
                                    <label string="Batch Number Date on" for="di_calcul_lot_date" class="col-lg-5 o_light_label"/>
                                    <field name="di_calcul_lot_date" />
                                    <label string="Default Establishment" for="di_default_establishment" class="col-lg-5 o_light_label"/>
                                    <field name="di_default_establishment" />
                                </div>   
                                
                                <div class="row mt16"> 
                                    <label string="Write Category Product" for="di_write_categ_product" class="col-lg-5 o_light_label"/>
                                    <field name="di_write_categ_product" />
                                    
                                    <label string="Write Category Partner" for="di_write_categ_partner" class="col-lg-5 o_light_label"/>
                                    <field name="di_write_categ_partner" />
                                </div>
                               
                                
                            </div>
                        </div>
                    </div>
                </div>
            </t>
            </div>
        </xpath>
    </field>
</record> 
  
    <record id="hubi_action_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_hubi_form" />
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hubi'}</field>
    </record>      
   
 
</odoo>
