<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="di_wiz_popup_form" model="ir.ui.view">
        <field name="name">di.wiz.popup.form</field>
        <field name="model">di.wiz.popup</field>
        <field name="arch" type="xml">
            <form string="Message">  
                     
                <group>                 
                    <field name="name" invisible="1"/>
                    <field name="button_ok" invisible="1"/>
                    <field name="button_yes" invisible="1"/>
                    <field name="button_no" invisible="1"/>
                    <field name="button_cancel" invisible="1"/>                         
                </group>
                
                <footer>
                    <button string="OK" class="oe_link" special="cancel" default_focus="1" attrs="{'invisible': [('button_ok', '=', False)]}"/>
                    <button string="Yes" type="object"  default_focus="1" name="yes" attrs="{'invisible': [('button_yes', '=', False)]}"  />
                    <button string="No" class="oe_link" name="no"  attrs="{'invisible': [('button_no', '=', False)]}" />
                    <button string="Cancel" class="oe_link" special="cancel"  attrs="{'invisible': [('button_cancel', '=', False)]}" />                       
                </footer>
            </form>
        </field>
    </record>         
</odoo>
