<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_miadi_etiquette_printing_tree" model="ir.ui.view" >
            <field name="name">miadi_etiquette.printing.tree</field>
            <field name="priority" eval="1"/>
            <field name="model">di.printing.printing</field>        
            <field name="arch" type="xml">
                <tree string="Printing" default_order="order_name"  import="true" create="true">
                    <field name="order_name"/>
					<field name="order_line"/>
                    <field name="printer_name"/>
					<field name="create_date"/>
					<field name="printing_date"/>
                    <field name="printed"/>
					<field name="count"/>
					<field name="real_number_etiq"/>
                </tree>
            </field>
    </record>
    
    <record id="miadi_etiquette_printing_form" model="ir.ui.view">
        <field name="name">miadi_etiquette.printing.form</field>
        <field name="model">di.printing.printing</field>
        <field name="arch" type="xml">
            <form string="Printing">
                <header>
                </header>
                <sheet>
                    <div class="oe_title" name="label_0001">
                        <H1>
                            <field name="order_name" default_focus="1" placeholder="Name of order"/>                             
                        </H1>
                    </div> 
                    <group>
                        <group>
                            <field name="order_line"/>
							<field name="printer_name"/>
							<field name="create_date"/>
							<field name="printing_date"/>
							<field name="printed"/>
							<field name="count"/>
							<field name="real_number_etiq"/>
							<field name="etiquette_text"/>
                            
                        </group>
                    </group>
                </sheet>         
            </form>
        </field>
    </record>
    
    <record id="action_miadi_etiquette_printing" model="ir.actions.act_window">
        <field name="name">Printing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">di.printing.printing</field>
        <field name="search_view_id" ref="view_miadi_etiquette_printing_tree"/>              
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Help
            </p>
            <p>
                Listing of the etiquette printings.
            </p>
        </field>
    </record>
    
</odoo>